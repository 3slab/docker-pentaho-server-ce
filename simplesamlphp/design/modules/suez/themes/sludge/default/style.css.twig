{% set sdsVersion = 1 %}
{% set cdnPath = 'https://projets-suez.github.io/sds/v' ~ sdsVersion %}
<style type="text/css">
[class^='sz-icon-'],
[class*=' sz-icon-'] {
    /* use !important to prevent issues with browser extensions that change fonts */
    font-family: 'sz-icons' !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-feature-settings: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.5;
    text-align: left;
    background-color: #f7f7f7;
}
html, body {
    height: 100%;
}
.tsme-container {
    height: calc(100% - 60px);
    overflow-y: auto;

}

.sz-small-font-size {
    font-size: 0.75rem;
}

.sz-normal-font-size {
    font-size: 1rem;
}

.sz-underline::after {
    content: '';
    display: block;
    width: 40px;
    height: 4px;
    margin: 8px 0;
    background-color: #86D1D7;
}

.sz-btn {
    background-image: linear-gradient(to right, #187280 0%, #187280 100%);
    background-repeat: repeat-x;
    font-family: 'DINPro';
    font-weight: 700;
    color: white;
    border: 0;
    width: 100%;
    padding: 16px 0;
    margin-bottom: 16px;
    text-transform: uppercase;
    position: relative;
    overflow: hidden;
}

.sz-btn:not(:disabled)::after {
    content: '';
    position: absolute;
    background-color: rgba(58, 62, 70, 0.2);
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transform: scale(0.35, 3.5);
    border-radius: 80%;
    transition: 0.25s ease-in;
    opacity: 0;
}

.sz-btn:hover::after {
    opacity: 1;
    border-radius: 0;
    transform: scale(1, 1);
}

.sz-btn[disabled] {
    background: #c1c4cc;
    font-weight: bold;
}

.sz-btn-outline {
    width: 100%;
    padding: 16px 0;
    margin-bottom: 16px;
    text-transform: uppercase;
    color: #030f40;
    font-family: 'DINPro';
    font-weight: 700;
    border-width: 2px;
    background: transparent;
}

.sz-btn-outline:hover {
    background-color: #030f40;
}

.sz-alert {
    font-family: 'DINPro';
    min-height: 35px;
}

.sz-checkbox {
    font-family: 'DINPro';
}

.custom-control-label::before {
    border: 2px solid;
    border-radius: 0 !important;
}

.sz-button-group {
    display: block;
    font-family: 'DINPro';
}

.sz-button-group__btn-choose {
    background: white;
    color: #030f40;
    border: 2px solid;
    border-color: #c1c4cc;
    width: 100%;
    padding: 16px 0;
    margin-bottom: 16px !important;
    text-transform: uppercase;
    position: relative;
    text-align: left;
    padding-left: 16px;
    font-weight: bold;
    flex: none !important;
}

.sz-button-group__btn-choose i {
    position: absolute;
    right: 0;
    top: 0;
    width: 53px;
    height: 100%;
    font-size: 1.3125rem;
    line-height: 50px;
    background: #c1c4cc;
    text-align: center;
}

.sz-button-group__btn-choose i.active {
    background: #aadc14;
}

.sz-button-group__btn-choose.active, .sz-button-group__btn-choose:hover, .sz-button-group__btn-choose.focus {
    border-color: #aadc14 !important;
    background: white !important;
    color: #030f40 !important;
    box-shadow: none;
}

.sz-header {
    font-family: 'DINPro';
    z-index: 101;
    box-shadow: 0 2px 5px 0 rgba(222, 222, 224, 0.57);
}

.sz-label-input.required:after {
    content: '*';
    position: absolute;
    color: #eb4a65;
    right: 0;
}

.sz-form-group {
    font-family: 'DINPro';
}

.sz-form-group__sz-input-text {
    height: 58px;
    font-size: 0.875rem;
    background: #eaedf4;
    border: 0;
    padding-left: 16px;
}

.sz-form-group__sz-input-text::placeholder {
    color: #7c818b;
    font-style: italic;
}

.sz-form-group__sz-input-text:focus {
    border: 2px solid #86D1D7;
    background: #ffffff;
    box-shadow: none;
}

.sz-form-group__sz-input-text--icon {
    padding-left: 48px;
}

.sz-form-group__sz-input-text--error {
    border: 2px solid #eb4a65;
}

.sz-form-group__sz-input-text--checked {
    border: 2px solid #86D1D7;
}

.sz-form-group__sz-input-group {
    background: transparent;
    font-size: 1.75rem;
}

.sz-form-group__input-group-icon {
    z-index: 5;
    padding: 1rem 0.95rem;
}

.sz-form-group__input-group-icon .mdi {
    font-size: 1.125rem;
}

.sz-form-group__input-group-icon-info {
    z-index: 5;
    right: 0;
    padding: 0.5rem 1rem;
}

.sz-form-group__input-group-icon-info .mdi {
    font-size: 1.75rem;
    color: #aadc14;
}

.sz-form-group__input-group-icon-clear {
    z-index: 5;
    right: 0;
    top: 0.875rem;
    cursor: pointer;
}

.sz-form-group__input-group-icon-valid {
    z-index: 6;
    right: 0;
    top: 0;
    width: 58px;
    height: 58px;
    background: #86D1D7;
    font-size: 1.75rem;
    text-align: center;
    line-height: 58px;
}

.sz-input-tooltip.show {
    opacity: 1;
}

.sz-input-tooltip .tooltip-inner {
    max-width: 250px;
    font-family: 'DINPro';
    font-weight: 700;
    padding: 0.7rem 1rem;
    border-radius: 0;
    background-color: #000d42;
    box-shadow: 0 0 7px 0 rgba(0, 0, 0, 0.1);
}

.sz-dropdown {
    font-family: 'DINPro';
}

.sz-dropdown #dropdown-basic.dropdown-toggle {
    background: transparent;
    box-shadow: none;
}

.sz-dropdown #dropdown-basic.dropdown-toggle:after {
    border: 0;
}

.sz-dropdown .dropdown-menu {
    top: 10px;
}

.sz-dropdown .dropdown-menu:after, .sz-dropdown .dropdown-menu:before {
    bottom: 100%;
    left: 50%;
    border: solid transparent;
    content: ' ';
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
}

.sz-dropdown .dropdown-menu:after {
    border-color: rgba(255, 255, 255, 0);
    border-bottom-color: #fff;
    border-width: 10px;
    margin-left: -10px;
}

.sz-dropdown .dropdown-menu:before {
    border-color: rgba(204, 204, 204, 0);
    border-bottom-color: #c1c4cc;
    border-width: 11px;
    margin-left: -11px;
}

.sz-dropdown .dropdown-menu a:last-child {
    border: 0 !important;
}

.sz-dropdown .dropdown-menu a:active {
    background: transparent !important;
    color: #030f40;
}

.sz-dropdown .dropdown-menu a i {
    font-size: 1.5rem;
}

.sz-dropdown__icon {
    font-size: 1.3rem;
}

.tsme-header.unlogged {
    padding-right: 20rem;
}

.tsme-header__brand {
    line-height: 60px;
}

.tsme-header__menu-icon {
    font-size: 2.5rem;
}

.tsme-header__app-icon {
    font-size: 1.7rem;
}

.tsme-header__notif-icon {
    font-size: 2rem;
}

.tsme-header__signin {
    font-size: 1.8rem;
}

