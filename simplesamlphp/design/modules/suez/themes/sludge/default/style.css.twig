    background-image: linear-gradient( rgba(0, 0, 0, 0.65), rgba(0, 0, 0, 0.65) ), url(https://tmatlasstorageaccount.blob.core.windows.net/assets/bgHome.jpg);
    height: 100%;
    background-size: 100% 100%;
}

.tsme-login__container {
    padding: 100px 0 0;
    max-width: 1200px;
}

.tsme-login-block {
    margin: 0 24px;
}

.tsme-login-block__title {
    font-size: 0.875rem;
    text-transform: uppercase;
    font-weight: 700;
}

.tsme-login-text__title {
    font-size: 2.1875rem;
}

.tsme-login-text__title::after {
    content: '';
    width: 40px;
    height: 4px;
    background: white;
    display: block;
    margin: 24px 0;
}

.tsme-login-text p {
    font-size: 1.3125rem;
}

.bg-secondary {
    background-color: #86D1D7 !important;
}
</style>
